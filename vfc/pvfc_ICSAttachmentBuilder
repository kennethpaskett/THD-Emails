    <apex:attribute name="eventTitle" description="Title to be used on Calendar Event" type="String" assignTo="{!evtTitle}"/>
    <apex:attribute name="eventDescription" description="Text to be used in the body of the Calendar Event" type="String" assignTo="{!evtDescription}"/>
    <apex:attribute name="eventDate" description="Date of the Event" type="Date" assignTo="{!evtDate}"/>
    <apex:attribute name="eventStartTime" description="Start Time of the Event" type="Time" assignTo="{!evtStartTime}"/>
    <apex:attribute name="eventEndTime" description="End Time of the Event" type="Time" assignTo="{!evtEndTime}"/>
    <apex:attribute name="eventLocation" description="Location of the Event" type="String" assignTo="{!evtLocation}"/>

    <messaging:attachment filename="{!eventTitle}.ics">
        {!ICSFileContent}
    </messaging:attachment>
</apex:component>
